    <form action="/submit" method="POST">
        <div class="container mt-4">
            <div class="row g-2">
                <div class="col-md">
                    <div class="form-floating">
                        <input type="text" class="form-control" id="drawing" value="{{data.drawing}}" disabled>
                        <label for="drawing">Drawing</label>
                    </div>
                </div>
                <div class="col-md">
                    <div class="form-floating">
                        <input type="text" class="form-control" id="workorder" value="{{data.workorder}}" disabled>
                        <label for="workorder">W/O Number</label>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="container mt-4">
            <div class="row justify-content-center">
                <div class="col">
                    <div class="card">
                        <div class="card-header">
                            Incoming Inside Diameter (blue line)
                        </div>
                        <div class="card-body">
                            <div class="input-group mb-3">
                                <input type="text" class="form-control" id="incoming_inside_dia" name="incoming_inside_dia" value="{{data.incoming_inside_dia}}">
                            </div>        
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="container mt-4">
            <div class="row justify-content-center">
                <div class="col">
                    <div class="card">
                        <div class="card-header">
                            Incoming Measurements
                        </div>
                        <div class="card-body">
                            <div class="input-group mb-3">
                                <span class="input-group-text" id="A">A</span>
                                <input type="text" class="form-control" id="in_A" name="in_A" value="{{data.in_A}}">
                            </div>
                            <div class="input-group mb-3">
                                <span class="input-group-text" id="B">B</span>
                                <input type="text" class="form-control" id="in_B" name="in_B" value="{{data.in_B}}">
                            </div>
                            <div class="input-group mb-3">
                                <span class="input-group-text" id="C">C</span>
                                <input type="text" class="form-control" id="in_C" name="in_C" value="{{data.in_C}}">
                            </div>
                            <div class="input-group mb-3">
                                <span class="input-group-text" id="R">R</span>
                                <input type="text" class="form-control" id="in_R" name="in_R" value="{{data.in_R}}">
                            </div>                  
                        </div>
                    </div>
                </div>
                <div class="col box">
                    <img src="/images/{{data.drawing}}_1.png" alt="Flowers in Chania" width="300">
                </div>
                <div class="col">
                    <div class="card">
                        <div class="card-header">
                            Outgoing Measurements
                        </div>
                        <div class="card-body">
                            <div class="input-group mb-3">
                                <span class="input-group-text" id="A">A</span>
                                <input type="text" class="form-control" id="out_A" name="out_A" value="{{data.out_A}}">
                            </div>
                            <div class="input-group mb-3">
                                <span class="input-group-text" id="B">B</span>
                                <input type="text" class="form-control" id="out_B" name="out_B" value="{{data.out_B}}">
                            </div>
                            <div class="input-group mb-3">
                                <span class="input-group-text" id="C">C</span>
                                <input type="text" class="form-control" id="out_C" name="out_C" value="{{data.out_C}}">
                            </div>
                            <div class="input-group mb-3">
                                <span class="input-group-text" id="R">R</span>
                                <input type="text" class="form-control" id="out_R" name="out_R" value="{{data.out_R}}">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="container mt-4">
            <div class="row justify-content-center">
                <div class="col">
                    <div class="card">
                        <div class="card-header">
                            Incoming Measurements
                        </div>
                        <div class="card-body">
                            <div class="input-group mb-3">
                                <span class="input-group-text" id="D">D</span>
                                <input type="text" class="form-control" id="in_D" name="in_D" value="{{data.in_D}}">
                            </div>
                            <div class="input-group mb-3">
                                <span class="input-group-text" id="E">E</span>
                                <input type="text" class="form-control" id="in_E" placeholder="(Diameter if Sleeved)" name="in_E" value="{{data.in_E}}">
                            </div>
                            <div class="input-group mb-3">
                                <span class="input-group-text" id="F">F</span>
                                <input type="text" class="form-control" id="in_F" name="in_F" value="{{data.in_F}}">
                            </div>                   
                            <div class="input-group mb-3">
                                <span class="input-group-text" id="G">G</span>
                                <input type="text" class="form-control" id="in_G" name="in_G" value="{{data.in_G}}">
                            </div>     
                            <div class="input-group mb-3">
                                <span class="input-group-text" id="H">H</span>
                                <input type="text" class="form-control" id="in_H" name="in_H" value="{{data.in_H}}">
                            </div>  
                            <div class="input-group mb-3">
                                <span class="input-group-text" id="I">I</span>
                                <input type="text" class="form-control" id="in_I" name="in_I" value="{{data.in_I}}">
                            </div>
                            <div class="input-group mb-3">
                                <span class="input-group-text" id="J">J</span>
                                <input type="text" class="form-control" id="in_J" name="in_J" value="{{data.in_J}}">
                            </div>
                            <div class="input-group mb-3">
                                <span class="input-group-text" id="K">K</span>
                                <input type="text" class="form-control" id="in_K" name="in_K" value="{{data.in_K}}">
                            </div>               
                        </div>
                    </div>
                </div>
                <div class="col box">
                    <img src="/images/{{data.drawing}}_2.png" alt="Flowers in Chania" width="300">
                </div>
                <div class="col">
                    <div class="card">
                        <div class="card-header">
                            Outgoing Measurements
                        </div>
                        <div class="card-body">
                            <div class="input-group mb-3">
                                <span class="input-group-text" id="D">D</span>
                                <input type="text" class="form-control" id="out_D" name="out_D" value="{{data.out_D}}">
                            </div>
                            <div class="input-group mb-3">
                                <span class="input-group-text" id="E">E</span>
                                <input type="text" class="form-control" id="out_E" placeholder="(Diameter if Sleeved)" name="out_E" value="{{data.out_E}}">
                            </div>                            
                            <div class="input-group mb-3">
                                <span class="input-group-text" id="F">F</span>
                                <input type="text" class="form-control" id="out_F" name="out_F" value="{{data.out_F}}">
                            </div>                         
                            <div class="input-group mb-3">
                                <span class="input-group-text" id="G">G</span>
                                <input type="text" class="form-control" id="out_G" name="out_G" value="{{data.out_G}}">
                            </div>               
                            <div class="input-group mb-3">
                                <span class="input-group-text" id="H">H</span>
                                <input type="text" class="form-control" id="out_H" name="out_H" value="{{data.out_H}}">
                            </div> 
                            <div class="input-group mb-3">
                                <span class="input-group-text" id="I">I</span>
                                <input type="text" class="form-control" id="out_I" name="out_I" value="{{data.out_I}}">
                            </div>
                            <div class="input-group mb-3">
                                <span class="input-group-text" id="J">J</span>
                                <input type="text" class="form-control" id="out_J" name="out_J" value="{{data.out_J}}">
                            </div>
                            <div class="input-group mb-3">
                                <span class="input-group-text" id="K">K</span>
                                <input type="text" class="form-control" id="out_K" name="out_K" value="{{data.out_K}}">
                            </div>   
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="container mt-4">
            <div class="row justify-content-center">
                <div class="col">
                    <div class="card" style="width: 30rem;">
                        <div class="card-body">
                            <div class="mb-4">
                                <select class="form-select" id="M32_STD" name="M32_STD">
                                    <option selected>{{data.M32_STD}}</option>
                                    <option value="M32 STD">M32 STD O/S</option>
                                    <option value="M32 STD+0.5mm">M32 STD + 0.5mm O/S</option>
                                    <option value="M32 STD+1.0mm">M32 STD + 1.0mm O/S</option>
                                </select>
                            </div>
                            <div class="mb-4">
                                <select class="form-select" id="M43" name="M43">
                                    <option selected>{{data.M43}}</option>
                                    <option value="M43 52x2">M43 52 X 2 O/S</option>
                                    <option value="M43 56x2">M43 56 X 2 O/S</option>
                                </select>
                            </div>
                            <div class="mb-4">
                                <select class="form-select" id="M25" name="M25">
                                    <option selected>{{data.M25}}</option>
                                    <option value="M25 40mm">M25 40mm Shrink</option>
                                    <option value="M25 35mm">M25 35mm Shrink</option>
                                </select>
                            </div>
                            <div class="mb">
                                <select class="form-select" id="M25M" name="M25M">
                                    <option selected>{{data.M25M}}</option>
                                    <option value="M25 M30x2">M25 M30 X 2 </option>
                                    <option value="M25 M38x2">M25 M38 X 2 </option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="container mt-4">
            <div class="row justify-content-center">
                <div class="col">
                    <div class="card" style="width: 30rem;">
                        <div class="card-body">
                            <div class="mb">
                                <select class="form-select" id="shrink_screw" name="shrink_screw">
                                    <option selected>{{data.shrink_screw}}</option>
                                    <option value="1 & 2 Shrink">1 & 2 Shrink</option>
                                    <option value="Screw">Screw</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="container mt-4">
            <div class="row justify-content-center">
                <div class="col">
                    <div class="card">
                        <div class="card-header">
                            Incoming Measurements
                        </div>
                        <div class="card-body">
                            <div class="input-group mb-3">
                                <span class="input-group-text" id="L">L</span>
                                <input type="text" class="form-control" id="in_L" name="in_L" value="{{data.in_L}}">
                            </div>   
                            <div class="input-group mb-3">
                                <span class="input-group-text" id="M">M</span>
                                <input type="text" class="form-control" id="in_M" name="in_M" value="{{data.in_M}}">
                            </div>
                            <div class="input-group mb-3">
                                <span class="input-group-text" id="N">N</span>
                                <input type="text" class="form-control" id="in_N" name="in_N" value="{{data.in_N}}">
                            </div> 
                            <div class="input-group mb-3">
                                <span class="input-group-text" id="P">P</span>
                                <input type="text" class="form-control" id="in_P" name="in_P" value="{{data.in_P}}">
                            </div>
                            <div class="input-group mb-3">
                                <span class="input-group-text" id="Q">Q</span>
                                <input type="text" class="form-control" id="in_Q" name="in_Q" value="{{data.in_Q}}">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col box">
                    <img src="/images/{{data.drawing}}_3.png" alt="Flowers in Chania" width="300">
                </div>
                <div class="col">
                    <div class="card">
                        <div class="card-header">
                            Outgoing Measurements
                        </div>
                        <div class="card-body">
                            <div class="input-group mb-3">
                                <span class="input-group-text" id="L">L</span>
                                <input type="text" class="form-control" id="out_L" name="out_L" value="{{data.out_L}}">
                            </div>        
                            <div class="input-group mb-3">
                                <span class="input-group-text" id="M">M</span>
                                <input type="text" class="form-control" id="out_M" name="out_M" value="{{data.out_M}}">
                            </div>
                            <div class="input-group mb-3">
                                <span class="input-group-text" id="N">N</span>
                                <input type="text" class="form-control" id="out_N" name="out_N" value="{{data.out_N}}">
                            </div>
                            <div class="input-group mb-3">
                                <span class="input-group-text" id="P">P</span>
                                <input type="text" class="form-control" id="out_P" name="out_P" value="{{data.out_P}}">
                            </div>
                            <div class="input-group mb-3">
                                <span class="input-group-text" id="Q">Q</span>
                                <input type="text" class="form-control" id="out_Q" name="out_Q" value="{{data.out_Q}}">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <div class="container mt-4">
            <div class="row justify-content-center">
                <div class="col">
                    <div class="card">
                        <div class="card-header">
                            Notes
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <textarea class="form-control" style="width: 30rem;" id="Notes" name="Notes" rows="4" onchange="auto_grow(this);">
                                    {{data.Notes}}
                                </textarea>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="card">
                        <div class="card-header">
                            Signature/Initials
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <textarea class="form-control" style="width: 30rem;" id="Initials" name="Initials" rows="4" onchange="auto_grow(this);">
                                    {{data.Initials}}
                                </textarea>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <script type="text/javascript">
            function auto_grow(element){
                element.style.height = "5px";
                element.style.height = (element.scrollHeight) + 'px';
            }
        </script>


        <div class="container mt-4">
            <button type="submit" class="btn btn-primary justify-content-center">Submit</button>
        </div>
    </form> 
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
